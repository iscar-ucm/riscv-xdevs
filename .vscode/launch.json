{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Hifive1 (Debug)",
            // Substitute with the board number
            "device": "FE310", 
            "type": "cortex-debug",
            "preLaunchTask": "main",
            // Defined in tasks.json
            "request": "launch",
            "servertype": "jlink",
            // JLink server path
            // "serverpath": "",
            // GDB debug output
            // "showDevDebugOutput": "raw",
            "cwd": "${workspaceRoot}",
            // Executable to launch
            "executable": "${workspaceRoot}/target/riscv32imc-unknown-none-elf/debug/riscv-xdevs",
            "interface": "jtag",
            // "svdFile": "${workspaceRoot}/hifive.svd",
            // Set this to point to sifive risc-v gdb path 
            "gdbPath": "riscv64-unknown-elf-gdb",
            "toolchainPrefix": "riscv64-unknown-elf",
        },
    ]
}